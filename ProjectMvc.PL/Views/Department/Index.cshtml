
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<br />


<a asp-action="Create" class="btn btn-primary">Create New Department</a>
<br />
<br />

@if (Model.Count() > 0)
{
    <h1>All Departments</h1>
    <table class="table table-striped table-hover mt-3">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(D => D.Code)</td>
                <td>@Html.DisplayNameFor(D => D.Name)</td>
                <td>@Html.DisplayNameFor(D => D.DateOfCreation)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
            {
                <tr>
                    <td>@dept.Code</td>
                    <td>@dept.Name</td>
                    <td>@dept.DateOfCreation</td>
                    <partial name="_ButtonEmployeeDepartmentPartialView" model="@dept.Id"/>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <center>
        <div class="alert alert-primary">
            <h3>There Is No Departments</h3>
        </div>
    </center>
}

